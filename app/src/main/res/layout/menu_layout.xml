<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:src="@drawable/swappysurvey_h"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_weight="2"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_survey"
            android:layout_weight="1"
            android:onClick="eventSurvey"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_export"
            android:layout_weight="1"
            android:onClick="selectExportMode"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_upload"
            android:layout_weight="1"
            android:onClick="eventUpload"
            android:scaleType="fitXY"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/button3"
            android:layout_weight="1"
            android:onClick="manageData"
            android:background="@drawable/selector_manage" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/imageView"
        android:src="@drawable/swappysurvey_lower"
        android:layout_weight="1"
        android:scaleType="fitXY" />
</LinearLayout>
